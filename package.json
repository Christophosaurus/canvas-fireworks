{
    "name": "webpack-typescript-scss-canvas-starter",
    "version": "1.0.0",
    "description": "starter template for a browser project using webpack to compile typescript and scss",
    "main": "./build/index.js",
    "scripts": {
        "dev": "webpack serve",
        "build": "webpack",
        "type-check": "tsc --pretty --noEmit",
        "lint": "eslint --ignore-path .gitignore --ext .ts,.tsx,.js,.jsx ./",
        "prettier": "prettier --ignore-path .gitignore \"**/*.+(ts|js|json)\"",
        "format": "npm run prettier -- --write",
        "format:check": "npm run prettier -- --list-different",
        "validate:run-all": "npm-run-all --parallel type-check format:check lint build",
        "validate": "npm run type-check && npm run format:check && npm run lint && npm run build",
        "test": "jest",
        "test:all": "echo \"Error: no test specified\" && exit 1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "npm run type-check"
        }
    },
    "lint-staged": {
        "*.@(ts|tsx|js|jsx|json)": [
            "npm run lint",
            "npm run format"
        ]
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@testing-library/jest-dom": "^5.11.9",
        "@types/node": "^14.14.25",
        "@typescript-eslint/eslint-plugin": "^4.14.2",
        "@typescript-eslint/parser": "^4.14.2",
        "babel-jest": "^26.6.3",
        "css-loader": "^5.0.1",
        "eslint": "^7.19.0",
        "eslint-config-prettier": "^7.2.0",
        "html-webpack-plugin": "^5.0.0",
        "husky": "^5.1.1",
        "jest": "^26.6.3",
        "lint-staged": "^10.5.4",
        "node-sass": "^5.0.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.2.1",
        "sass-loader": "^11.0.0",
        "style-loader": "^2.0.0",
        "ts-jest": "^26.5.0",
        "ts-loader": "^8.0.15",
        "typescript": "^4.1.3",
        "webpack": "^5.21.1",
        "webpack-cli": "^4.5.0",
        "webpack-dev-server": "^3.11.2"
    }
}
